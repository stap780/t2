<%= form_with model: client, local: true do |f| %>
  <%= render "shared/errors", object: client if client.errors.any? %>

  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <div class="space-y-6">
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-violet-500 focus:border-violet-500", required: true %>
        </div>
        <div>
          <%= f.label :middlename, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :middlename, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-violet-500 focus:border-violet-500" %>
        </div>
        <div>
          <%= f.label :surname, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :surname, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-violet-500 focus:border-violet-500" %>
        </div>
        <div>
          <%= f.label :phone, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :phone, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-violet-500 focus:border-violet-500" %>
        </div>
        <div class="sm:col-span-2">
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-violet-500 focus:border-violet-500", required: true %>
        </div>
      </div>
    </div>
  </div>

  <!-- Кнопки действий -->
  <div class="mt-6 flex justify-start space-x-3">
    <%= f.submit class: "px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
    <%= link_to t('actions.cancel'), "#", class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300", data: { action: "click->offcanvas#close", turbo: false } %>
  </div>
<% end %>

