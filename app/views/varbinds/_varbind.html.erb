<%= turbo_frame_tag dom_id(record, dom_id(varbind)), class: "p-3 mb-2" do %>
  <div class="flex justify-between items-center">
    <div class="text-sm text-gray-700 space-x-3">
      <span><strong>Bindable Type:</strong> <%= varbind.bindable_type %></span>
      <span><strong>Bindable:</strong> #<%= varbind.bindable_id %></span>
      <span><strong>Value:</strong> <%= varbind.value %></span>
    </div>
    <div class="flex space-x-2">
      <%= link_to polymorphic_path([record, varbind], action: :edit), 
          class: "text-blue-600 hover:text-blue-800 text-sm" do %>
            <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          <% end %>
      <%= link_to polymorphic_path([record, varbind]), 
          method: :delete,
          class: "text-red-600 hover:text-red-800 text-sm",
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
            <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
        <% end %>
    </div>
  </div>
<% end %>