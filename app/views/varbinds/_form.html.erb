<%= form_with model: [@record, @varbind] do |f| %>
  <%= render "shared/errors", object: @varbind %>

  <div class="flex items-end gap-2 mb-4">
    <div class="flex-1">
      <%= f.label :bindable_type, "Bindable Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :bindable_type, Varbind.int_types, {}, { class: "w-full px-2 py-1 border border-gray-300 rounded-md" } %>
    </div>

    <div class="flex-1">
      <%= f.label :bindable_id, "Bindable", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :bindable_id, Varbind.int_ids, {}, { class: "w-full px-2 py-1 border border-gray-300 rounded-md" } %>
    </div>

    <div class="flex-1">
      <%= f.label :value, "Value (External ID)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :value, class: "w-full px-2 py-1 border border-gray-300 rounded-md" %>
    </div>
    <%= f.submit class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-green-700 bg-green-100 hover:bg-green-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out" %>
    <% 
      parent_record = @record.respond_to?(:product) ? @record.product : nil
      path_record = parent_record ? [parent_record, @record] : @record
    %>
    <%= link_to polymorphic_path(path_record), 
        class: "text-blue-600 hover:text-blue-800 text-sm",
        data: { turbo_frame: 'offcanvas', turbo_prefetch: false } do %>
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
    <% end %>

  </div>
<% end %>
