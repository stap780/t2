<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <%= link_to t('.back_to_list'), acts_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
    <h1 class="text-2xl font-semibold text-gray-900"><%= t('.heading') %> №<%= @act.number %></h1>
    <div class="flex space-x-2">
      <%= link_to "PDF", print_act_path(@act, format: :pdf), class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700", target: '_blank' %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6 mb-6">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Информация о компании (принимающая сторона) -->
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-2"><%= t('.receiving_party') %></h2>
        <p class="text-gray-700 font-medium"><%= @act.company&.title %></p>
        <p class="text-sm text-gray-600"><%= @act.company&.ur_address %></p>
      </div>

      <!-- Информация о страховой компании (передающая сторона) -->
      <div>
        <h2 class="text-lg font-semibold text-gray-900 mb-2"><%= t('.transferring_party') %></h2>
        <p class="text-gray-700 font-medium"><%= @act.strah&.title %></p>
        <p class="text-sm text-gray-600"><%= @act.strah&.ur_address %></p>
      </div>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <span class="text-sm text-gray-500"><%= t('.act_date') %>:</span>
          <p class="text-gray-900 font-medium"><%= @act.date&.strftime('%d.%m.%Y') %></p>
        </div>
        <div>
          <span class="text-sm text-gray-500"><%= t('.status') %>:</span>
          <p class="text-gray-900 font-medium"><%= @act.status %></p>
        </div>
        <% if @act.driver.present? %>
          <div>
            <span class="text-sm text-gray-500"><%= t('.driver') %>:</span>
            <p class="text-gray-900 font-medium"><%= @act.driver.email_address %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Позиции акта, сгруппированные по заявкам -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4"><%= t('.items') %></h2>

    <% incases = @act.items.includes(:incase).map(&:incase).uniq.compact %>
    <% incases.each do |incase| %>
      <div class="mb-6 border border-gray-200 rounded-lg overflow-hidden">
        <!-- Заголовок заявки -->
        <div class="bg-gray-100 px-4 py-3 border-b border-gray-200">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <span class="text-xs text-gray-500">Номер З/Н:</span>
              <p class="text-sm font-semibold text-gray-900">
                <%= incase.stoanumber.present? ? "Номер З/Н #{incase.stoanumber}" : "Заявка ##{incase.id}" %>
              </p>
            </div>
            <div>
              <span class="text-xs text-gray-500">ТС:</span>
              <p class="text-sm font-semibold text-gray-900">
                <%= incase.modelauto || 'Не указано' %> (<%= incase.carnumber || 'Не указано' %>)
              </p>
            </div>
            <div>
              <span class="text-xs text-gray-500">№ ВД:</span>
              <p class="text-sm font-semibold text-gray-900">
                <%= incase.unumber %> от <%= incase.date&.strftime('%d.%m.%Y') %>
              </p>
            </div>
          </div>
        </div>

        <!-- Позиции этой заявки -->
        <div class="divide-y divide-gray-200">
          <% act_items_from_incase = @act.items.where(incase: incase).order(:title) %>
          <% act_items_from_incase.each do |item| %>
            <div class="px-4 py-3 hover:bg-gray-50">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-center space-x-3">
                    <%# check_box_tag "item_#{item.id}", item.id, false, 
                        class: "mt-1 h-4 w-4 text-violet-600 focus:ring-violet-500 border-gray-300 rounded",
                        id: "item_#{item.id}" %>
                    <div class="flex-1">
                      <p class="text-sm font-medium text-gray-900">
                        <%= item.title %> (<%= item.katnumber %>)
                      </p>
                      <p class="text-xs text-gray-500 mt-1">
                        <%= t('.note') %>: <%= item.item_status&.title || 'Не указано' %>
                      </p>
                    </div>
                  </div>
                </div>
                <div class="ml-4 flex items-center space-x-2">
                  <label class="flex items-center space-x-2 text-sm text-gray-600">
                    <input type="checkbox" class="h-4 w-4 text-violet-600 focus:ring-violet-500 border-gray-300 rounded" />
                    <span><%= t('.yes') %></span>
                  </label>
                  <label class="flex items-center space-x-2 text-sm text-gray-600">
                    <input type="checkbox" class="h-4 w-4 text-violet-600 focus:ring-violet-500 border-gray-300 rounded" />
                    <span><%= t('.no') %></span>
                  </label>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

</div>

