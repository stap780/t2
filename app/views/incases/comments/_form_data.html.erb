<div class="space-y-4">
  <div>
    <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :body, rows: 3, 
        class: "w-full px-3 py-2 border border-gray-300 rounded-md",
        placeholder: t("incases.comments.comment_placeholder"),
        required: true %>
    <%= f.hidden_field :user_id, value: Current.user&.id if defined?(Current) && Current.user %>
  </div>
</div>

