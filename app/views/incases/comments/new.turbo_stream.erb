<%= turbo_stream.update "offcanvas" do %>
  <div class="p-6">
    <h2 class="text-xl font-semibold mb-4">Новый комментарий</h2>
    <%= form_with model: [@incase, @comment], local: true, data: { turbo_frame: "_top" } do |f| %>
      <div class="mb-4">
        <%= f.label :body, t('activerecord.attributes.comment.body'), class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :body, rows: 4, class: "w-full px-3 py-2 border border-gray-300 rounded-md", required: true %>
      </div>
      <div class="flex justify-end space-x-2">
        <%= f.submit "Создать", class: "px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
        <%= link_to "Отмена", "#", 
            class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300",
            data: { action: "click->offcanvas#close" } %>
      </div>
    <% end %>
  </div>
<% end %>

