<%= form_with model: [incase, comment], local: true do |f| %>
  <%= render "shared/errors", object: comment if comment.errors.any? %>

  <div class="bg-white rounded-lg shadow p-6 mb-6">
    <div class="space-y-6">
      <div>
        <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :body, rows: 4, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-violet-500 focus:border-violet-500",
            placeholder: t("incases.comments.comment_placeholder"),
            required: true %>
      </div>
    </div>
  </div>

  <!-- Кнопки действий -->
  <div class="mt-6 flex justify-start space-x-3">
    <%= f.submit class: "px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
    <%= link_to t('actions.cancel'), "#", class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300", data: { action: "click->offcanvas#close" } %>
  </div>
<% end %>

