<div class="bg-white w-full min-w-0">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-4 w-full">
    <div class="lg:col-span-3">
      <%= f.label :incase_status_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :incase_status_id, IncaseStatus.all, :id, :title, { prompt: t('activerecord.attributes.incase.incase_status_id')}, { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
    </div>

    <div class="lg:col-span-3">
      <%= f.label :incase_tip_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :incase_tip_id, IncaseTip.all, :id, :title, { prompt: t('activerecord.attributes.incase.incase_tip_id') }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
    </div>

    <div class="lg:col-span-1">
      <%= f.label :region, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :region, options_for_select(Incase::REGION.map { |r| [r, r] }, incase.region), { prompt: '' }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
    </div>

    <div class="lg:col-span-3">
      <%= f.label :stoanumber, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :stoanumber, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="lg:col-span-3">
      <%= f.label :unumber, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :unumber, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="lg:col-span-3">
      <%= f.label :strah_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :strah_id, Company.strah.limit(100), :id, :short_title, { prompt: ''}, { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
    </div>

    <div class="lg:col-span-3">
      <%= f.label :company_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.collection_select :company_id, Company.standart.limit(100), :id, :short_title, { prompt: ''}, { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
    </div>

    <div class="lg:col-span-3">
      <%= f.label :carnumber, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :carnumber, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="lg:col-span-3">
      <%= f.label :date, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :date, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="lg:col-span-3">
      <%= f.label :modelauto, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :modelauto, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
    </div>

    <div class="lg:col-span-3">
      <%= f.label :totalsum, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :totalsum, step: 0.01, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100", 
          min: 0, 
          readonly: true%>
    </div>
    <div class="lg:col-span-3">
      <%= f.label :sum, t('activerecord.attributes.incase.sum'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="w-full px-3 py-2 border border-gray-300 rounded-md bg-gray-100 text-gray-700 select-text" 
            data-totalsum-calculator-target="totalsum" value="0">0
      </div>
    </div>
  </div>
</div>

