<% content_for :title, "Отправка писем" %>

<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Отправка писем</h1>
  </div>

  <%= turbo_stream_from "email_deliveries" %>

  <!-- Поиск и фильтры -->
  <div class="bg-white rounded-lg shadow p-4 mb-4">
    <%= search_form_for @search, url: email_deliveries_path, method: :get, html: { class: "flex items-center space-x-4" } do |f| %>
      <%= f.search_field :recipient_email_cont, placeholder: "Email получателя", class: "px-3 py-2 border border-gray-300 rounded-md" %>
      <%= f.select :status_eq, options_for_select([['Все', ''], ['Ожидает', 'pending'], ['Отправлено', 'sent'], ['Ошибка', 'failed']], params.dig(:q, :status_eq)), {}, { class: "px-3 py-2 border border-gray-300 rounded-md" } %>
      <%= f.select :mailer_class_eq, options_for_select([['Все', ''], ['ActMailer', 'ActMailer'], ['IncaseMailer', 'IncaseMailer']], params.dig(:q, :mailer_class_eq)), {}, { class: "px-3 py-2 border border-gray-300 rounded-md" } %>
      <%= f.submit "Поиск", class: "px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
      <%= link_to "Сбросить", email_deliveries_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
    <% end %>
  </div>

  <!-- Таблица отправок -->
  <div class="bg-white rounded-lg shadow divide-y">
    <div class="grid grid-cols-[50px_150px_200px_150px_150px_100px_150px] gap-4 p-4 font-medium text-gray-700">
      <div>#</div>
      <div>Получатель</div>
      <div>Email</div>
      <div>Тип</div>
      <div>Статус</div>
      <div>Дата</div>
      <div></div>
    </div>
    <%= turbo_frame_tag "email_deliveries" do %>
      <% if @email_deliveries.any? %>
        <% @email_deliveries.each do |email_delivery| %>
          <%= render email_delivery %>
        <% end %>
      <% else %>
        <div class="p-8 text-center text-gray-500">
          <p>Нет записей об отправке писем</p>
        </div>
      <% end %>
    <% end %>
    <%= render "shared/paginate", f: @email_deliveries %>
  </div>
</div>

