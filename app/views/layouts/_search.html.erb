<div class="max-w-lg w-full lg:max-w-sm xl:max-w-md 2xl:max-w-lg relative">
<%= form_with url: fullsearch_dashboard_index_path, 
              method: :post, 
              class: "relative",
              id: "fullsearch_result_form",
              data: { 
                controller: "debounce", 
                debounce_target: "form",
                turbo: true
              } do |f| %>
  <label for="search" class="sr-only"><%= t('search') %></label>
  <div class="relative">
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <svg class="h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
      </svg>
    </div>
    <%= f.search_field :query, 
                       id: "search",
                       class: "block w-full pl-10 pr-10 py-2 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-violet-500 focus:border-violet-500 sm:text-sm",
                       placeholder: t('search'),
                       'aria-label': "Search",
                       data: { action: "input->debounce#search" },
                       autocomplete: 'off' %>
    <button type="button" class="absolute inset-y-0 right-0 pr-5 cursor-pointer flex items-center"
            aria-label="Close"
            data-action="click->debounce#clear">
      <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </div>
  <div class="absolute z-50 mt-1 w-full bg-white rounded-md shadow-lg max-h-96 overflow-y-auto border-0 border-gray-200" 
       id="fullsearch_result" aria-labelledby="fullsearch_result_form"></div>
<% end %>
</div>