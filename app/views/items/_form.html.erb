<%= form_with(model: [incase, item], class: "space-y-4") do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul class="list-disc ml-6">
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </fieldset>

  <fieldset>
    <%= form.label :katnumber, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :katnumber, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </fieldset>

  <fieldset>
    <%= form.label :supplier_code, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :supplier_code, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </fieldset>

  <fieldset>
    <%= form.label :quantity, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :quantity, class: "w-full px-3 py-2 border border-gray-300 rounded-md", min: 0 %>
  </fieldset>

  <fieldset>
    <%= form.label :price, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.number_field :price, step: 0.01, class: "w-full px-3 py-2 border border-gray-300 rounded-md", min: 0 %>
  </fieldset>

  <fieldset>
    <%= form.label :item_status_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :item_status_id, ItemStatus.all, :id, :title, { prompt: t('activerecord.attributes.item.item_status_id'), include_blank: true }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
  </fieldset>

  <fieldset>
    <%= form.label :variant_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.collection_select :variant_id, Variant.all.limit(100), :id, :sku, { prompt: t('activerecord.attributes.item.variant_id'), include_blank: true }, { class: "w-full px-3 py-2 border border-gray-300 rounded-md" } %>
  </fieldset>

  <div class="flex justify-end space-x-3">
    <%= form.submit t('actions.save'), class: "px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
  </div>
<% end %>

