<%= form_with model: [product, variant], local: true do |f| %>
  <% if variant.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mb-4">
      <ul class="list-disc ml-6">
        <% variant.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= render 'variants/form_data', f: f %>

  <div class="flex justify-end space-x-3 mt-4">
    <%= f.submit t("variants.form.save"), class: "px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
    <%= link_to t("variants.form.cancel"), product_path(product), 
        class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300",
        data: { turbo_action: "replace" } %>
  </div>
<% end %>
