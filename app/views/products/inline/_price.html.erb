<%= turbo_frame_tag dom_id(product, dom_id(variant, :price)) do %>
    <% if variant %>
        <% price_classes = variant.price_css_classes %>
        <div class="<%= price_classes %> px-2 py-1 rounded">
            <div class="flex flex-col gap-2">
                <%= link_to edit_price_inline_product_variant_path(product, variant), 
                    class: "text-sm text-blue-600 hover:text-blue-800", data: {turbo_prefetch: false} do %>
                    <span class="font-medium"><%= number_with_precision(variant.price, precision: 0, delimiter: '') %></span>
                    <% if variant.oszz_price.present? %>
                        <span class="text-xs text-gray-500">(<%= variant.oszz_price %>)</span>
                    <% end %>
                <% end %>
            </div>
        </div>
    <% else %>
        <div>-</div>
    <% end %>
<% end %>