<%= turbo_frame_tag "variant_price_#{variant.id}" do %>
  <%= form_with model: [product, variant], url: update_price_product_variant_path(product, variant), method: :patch, local: false, class: "inline-flex items-center gap-2" do |f| %>
    <%= f.number_field :price, step: 0.01, min: 0, value: variant.price, class: "w-24 px-2 py-1 border border-gray-300 rounded text-sm", autofocus: true %>
    <%= f.submit "✓", class: "px-2 py-1 bg-green-500 text-white rounded hover:bg-green-600 text-sm cursor-pointer" %>
    <%= link_to "✕", product_path(product), class: "px-2 py-1 bg-gray-500 text-white rounded hover:bg-gray-600 text-sm cursor-pointer", data: { turbo_frame: "_top" } %>
  <% end %>
<% end %>
