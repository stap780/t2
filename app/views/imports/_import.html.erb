<%= turbo_frame_tag import, class: "flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition duration-150 ease-in-out", data: { controller: "import-status" } do %>
  <div class="flex-1">
    <div class="flex items-center space-x-4">
      <div class="flex-shrink-0" data-import-status-target="status">
        <% if import.completed? %>
          <svg class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% elsif import.processing? %>
          <svg class="h-6 w-6 text-blue-500 animate-spin" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
        <% elsif import.failed? %>
          <svg class="h-6 w-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        <% else %>
          <svg class="h-6 w-6 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
        <span class="<%= import.status_color %> px-2 py-1 rounded-full text-xs font-medium">
          <%= t("enums.import.status.#{import.status}") %>
        </span>
      </div>
      
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900 truncate">
          <%= import.name %>
          <span class="text-xs text-gray-500">
            • <%= import.created_at.strftime("%d/%m/%Y-%H:%M") %>
          </span>
        </p>
        <div class="flex items-center space-x-2 mt-1">
          <span class="text-xs text-gray-500">
            <%= t("imports.item.created_by") %> <%= import.user.email_address %>
          </span>
          <span class="text-xs text-gray-500">
            • <%= time_ago_in_words(import.created_at) %> <%= t("imports.item.ago") %>
          </span>
          <% if import.imported_at %>
            <span class="text-xs text-gray-500">
              • <%= t("imports.item.completed") %> <%= time_ago_in_words(import.imported_at) %> <%= t("imports.item.ago") %>
            </span>
          <% end %>
        </div>
        <% if import.has_error? %>
          <div class="mt-1">
            <p class="text-xs text-red-600 bg-red-50 p-2 rounded border border-red-200">
              <span class="font-medium"><%= t("imports.item.error") %>:</span> <%= import.error_summary %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="flex items-center space-x-2">
    <% if import.completed? && import.zip_file.attached? %>
      <%= link_to download_import_path(import), 
          class: "inline-flex items-center px-3 py-1 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 transition duration-150 ease-in-out",
          data: { 
            turbo: false,
            controller: "download",
            action: "click->download#download"
          },
          title: "Download #{import.zip_file.filename}" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-4-4m4 4l4-4m5-8H7a2 2 0 00-2 2v14a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2z" />
        </svg>
  <%= t("imports.item.download") %>
      <% end %>
    <% end %>
    
    <%= button_to import_path(import), 
        method: :delete,
  confirm: t("imports.item.delete_confirm"),
        class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out",
        data: { turbo: true } do %>
      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
<% end %>
