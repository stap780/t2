<div class="flex items-center justify-between mb-4">
  <h1 class="text-xl font-semibold">Параметры</h1>
  <div class="flex space-x-2">
    <%= link_to "New Property", new_property_path, 
        class: "inline-flex items-center px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700",
        data: { turbo_frame: 'offcanvas', turbo_prefetch: false } %>
  </div>
</div>
<%= turbo_stream_from "properties" %>
<div class="bg-white rounded-lg shadow divide-y">
  <div class="grid grid-cols-[50px_1fr_200px] gap-4 p-4 font-medium text-gray-700">
    <div>#</div>
    <div>Title</div>
    <div></div>
  </div>
  <%= turbo_frame_tag "properties" do %>
    <%= render @properties %>
  <% end %>
</div>
