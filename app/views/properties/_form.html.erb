<%= form_with model: property, local: true, class: "space-y-4" do |f| %>

  <%= render 'shared/errors', object: property %>

  <fieldset>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </fieldset>
  
  <div class="mt-2 flex items-center justify-between">
    <legend class="text-sm font-medium text-gray-700">characteristics Info</legend>
    <%= link_to "Add a Characteristic", 
    property.new_record? ? new_characteristic_path(property_id: nil) : new_property_characteristic_path(property), 
    data: { turbo_stream: true }, 
    class: "p-2 rounded-md bg-blue-300 hover:bg-blue-400" %>
  </div>

  <%= turbo_frame_tag "characteristics" do %>
    <% property.characteristics.each do |characteristic| %>
      <%= render "properties/nested", characteristic: characteristic, property: property %>
    <% end %>
  <% end %>
  
  <div class="flex justify-end space-x-3">
    <%= f.submit "Save", class: "px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
    <%# link_to "Cancel", properties_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300",
        data: { turbo_action: "replace" } %>
  </div>

<% end %>
