<%= turbo_frame_tag dom_id(property), class: "grid grid-cols-[50px_1fr_200px] gap-4 p-4 border-t hover:bg-gray-50" do %>
  <div><%= property.id %></div>
  <div>
    <%= link_to property.title, property_path(property), class: "text-blue-600 hover:text-blue-800" , data: { turbo: false } %>
    <div class="text-sm text-gray-500 mt-1">
      <%= pluralize(property.characteristics.count, 'characteristic') %>
    </div>
  </div>
  <div class="flex justify-end space-x-2">
    <%= link_to_edit edit_property_path(property), data: { turbo_frame: 'offcanvas', turbo_prefetch: false } %>
    <%= link_to_delete property_path(property), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
<% end %>