<%= turbo_frame_tag export, class: "flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition duration-150 ease-in-out", data: { controller: "export-status" } do %>
  <div class="flex-1">
    <div class="flex items-center space-x-4">
      <div class="flex-shrink-0">
        <span data-export-status-target="status">
          <% if export.completed? %>
            <svg class="h-6 w-6 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          <% elsif export.processing? %>
            <svg class="h-6 w-6 text-blue-500 animate-spin" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
          <% elsif export.failed? %>
            <svg class="h-6 w-6 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
          <% else %>
            <svg class="h-6 w-6 text-yellow-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          <% end %>
        </span>
        <span class="<%= export.status_color %> px-2 py-1 rounded-full text-xs font-medium">
          <%= export.status.titleize %>
        </span>
      </div>
      
      <div class="flex-1 min-w-0">
        <p class="text-sm font-medium text-gray-900 truncate">
          <%= export.name %>
          <span class="bg-gray-100 text-gray-800 px-2 py-1 rounded-full text-xs font-medium">
            <%= export.format.upcase %>
          </span>
          <% if export.test_mode? %>
            <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-medium">
              Test Mode
            </span>
          <% end %>
        </p>
        <div class="flex items-center space-x-2 mt-1">
          <span class="text-xs text-gray-500">
            Created by <%= export.user.email_address %>
          </span>
          <span class="text-xs text-gray-500">
            • <%= export.created_at.strftime("%B %d, %Y at %l:%M %p") %>
          </span>
          <span class="text-xs text-gray-500">
            • <%= time_ago_in_words(export.created_at) %> ago
          </span>
          <% if export.exported_at %>
            <span class="text-xs text-gray-500">
              • Completed <%= time_ago_in_words(export.exported_at) %> ago
            </span>
          <% end %>
        </div>
        <% if export.has_error? %>
          <div class="mt-1">
            <p class="text-xs text-red-600 bg-red-50 p-2 rounded border border-red-200">
              <span class="font-medium">Error:</span> <%= export.error_summary %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="flex items-center space-x-2">
    <% if export.completed? && export.export_file.attached? %>
      <%= link_to download_export_path(export), 
          class: "inline-flex items-center px-3 py-1 border border-green-300 shadow-sm text-xs font-medium rounded text-green-700 bg-green-50 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition duration-150 ease-in-out",
          data: { 
            turbo: false,
            controller: "download",
            action: "click->download#download"
          },
          title: "Download #{export.export_file.filename}" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-4-4m4 4l4-4m5-8H7a2 2 0 00-2 2v14a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2z" />
        </svg>
        Download
      <% end %>
    <% end %>
    
    <% unless export.processing? %>
      <%= button_to run_export_path(export), 
          method: :post,
          remote: true,
          class: "inline-flex items-center px-3 py-1 border border-blue-300 shadow-sm text-xs font-medium rounded text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-7 4h12l-2 5H8l-2-5z" />
        </svg>
        Run Export
      <% end %>
    <% else %>
      <span class="inline-flex items-center px-3 py-1 border border-yellow-300 shadow-sm text-xs font-medium rounded text-yellow-700 bg-yellow-50">
        <svg class="h-4 w-4 mr-1 animate-spin" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
        </svg>
        Processing...
      </span>
    <% end %>
    
    <%= link_to edit_export_path(export), 
        class: "inline-flex items-center px-3 py-1 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-gray-50 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 transition duration-150 ease-in-out",
        data: { turbo: false } do %>
      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
      Edit
    <% end %>
    
    <%= button_to export_path(export), 
        method: :delete,
        confirm: "Are you sure you want to delete this export?",
        class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out" do %>
      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
<% end %>
