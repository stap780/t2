<% content_for :title, t("exports.new.title") %>

<div class="container mx-auto px-4">
  <div class="mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <%= link_to t("exports.new.back"), exports_path, class: "text-violet-600 hover:text-violet-700" %>
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= t("exports.new.header") %></h1>
        </div>
      </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      
      <div class="px-6 py-6">
        <%= render 'form', export: @export %>
      </div>
    </div>
  </div>
</div>