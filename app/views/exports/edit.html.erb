<% content_for :title, t("exports.edit.title") %>

<div class="container mx-auto px-4">
  <div class="mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-900"><%= t("exports.edit.header") %></h1>
          <p class="mt-1 text-sm text-gray-600"><%= t("exports.edit.subheader") %></p>
        </div>
  <%= link_to t("exports.edit.back"), exports_path, class: "text-violet-600 hover:text-violet-700" %>
      </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
  <h2 class="text-lg font-medium text-gray-900"><%= t("exports.form.settings") %></h2>
      </div>
      
      <div class="px-6 py-6">
        <%= render 'form', export: @export %>
      </div>
    </div>
  </div>
</div>
