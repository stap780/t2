<%= form_with model: export, local: true, class: "space-y-8", data: { controller: "export-form" } do |form| %>
  <%= render 'shared/errors', object: export %>

  <div class="grid grid-cols-1 gap-8">
    <!-- Export Name -->
    <div class="space-y-3 mt-2 mb-2">
  <%= form.label :name, t("activerecord.attributes.export.name"), class: "block text-sm font-semibold text-gray-800 mt-2 mb-2" %>
    <%= form.text_field :name, 
      placeholder: t("exports.form.name_placeholder"),
          class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-lg shadow-sm focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition duration-200 ease-in-out text-gray-900 placeholder-gray-400"
      %>
    </div>

    <!-- Test Mode Toggle -->
    <div class="space-y-3 mt-2 mb-2">
      <div class="flex items-start">
        <div class="flex items-center h-5">
          <%= form.check_box :test, 
              class: "h-4 w-4 text-violet-600 focus:ring-violet-500 border-gray-300 rounded"
          %>
        </div>
        <div class="ml-3 text-sm">
          <%= form.label :test, t("exports.form.test_mode"), class: "font-semibold text-gray-800" %>
          <p class="text-gray-600">
            <%= t("exports.form.test_limit_html", count: Export::TEST_LIMIT).html_safe %>
          </p>
        </div>
      </div>
    </div>

    <!-- Export Time (15-minute intervals) -->
    <div class="space-y-3 mt-2 mb-2">
  <%= form.label :time, t("exports.form.scheduled_time"), class: "block text-sm font-semibold text-gray-800" %>
  <p class="text-xs text-gray-600 mt-2 mb-2"><%= t("exports.form.time_hint") %></p>
      <% time_options = (0..23).flat_map { |h| [0,15,30,45].map { |m| format("%02d:%02d", h, m) } } %>
      <%= form.select :time, 
          options_for_select(time_options, selected: form.object.time), 
          { include_blank: t("exports.form.not_set") }, 
          class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-lg shadow-sm focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition duration-200 ease-in-out text-gray-900" %>
    </div>

    <!-- Data Source Info -->
    <% if !export.has_data_source? %>
    <div class="space-y-3 mt-2 mb-2 p-4 bg-blue-50 border border-blue-200 rounded-lg">
  <h3 class="text-sm font-semibold text-blue-800"><%= t("exports.form.data_source") %></h3>
        <div class="text-sm text-orange-700">
          <p><%= t("exports.form.no_imports") %></p>
          <p class="mt-2">
            <%= link_to t("exports.form.create_import"), imports_path, 
                class: "inline-flex items-center text-blue-600 hover:text-blue-800 underline" %>
          </p>
        </div>
    </div>
    <% end %>

    <!-- Export Format -->
    <div class="space-y-3 mt-2 mb-2">
  <%= form.label :format, t("exports.form.export_format"), class: "block text-sm font-semibold text-gray-800" %>
  <p class="text-xs text-gray-600 mt-2 mb-2"><%= t("exports.form.export_format_hint") %></p>
      <div class="flex flex-wrap gap-4">
        <% %w[csv xlsx xml].each do |format_option| %>
          <label class="flex items-center cursor-pointer">
            <%= form.radio_button :format, format_option, 
                class: "w-4 h-4 text-violet-600 border-gray-300 focus:ring-violet-500 focus:ring-2",
                data: { action: "change->export-form#formatChanged" }
            %>
            <span class="ml-2 text-sm font-medium text-gray-900">
              <%= format_option.upcase %>
            </span>
          </label>
        <% end %>
      </div>
      
    </div>

    <!-- Field Selection for Excel/CSV -->
    <div class="space-y-3 mt-2 mb-2" id="field-selection" data-export-form-target="fieldSelection" style="display: none;">
      <% 
        # Get the last completed import
        last_import = Import.completed.recent.first
      %>
  <%= form.label :file_headers, t("exports.form.fields_to_export"), class: "block text-sm font-semibold text-gray-800" %>
  <p class="text-xs text-gray-600 mt-2 mb-4"><%= t("exports.form.fields_hint") %></p>
      
      <% if last_import&.file_header&.any? %>
        <div class="flex gap-6 overflow-y-auto p-4 bg-gray-50 border-2 border-gray-200 rounded-lg">
          <% last_import.file_header.each_slice(12).each do |headers_group| %>
            <div class="flex-1 space-y-2">
              <% headers_group.each do |header| %>
                <label class="flex items-center cursor-pointer">
                  <%= form.check_box :file_headers, 
                      { multiple: true, class: "h-4 w-4 text-violet-600 focus:ring-violet-500 border-gray-300 rounded", 
                        checked: form.object.file_headers&.include?(header.to_s) }, 
                      header, nil %>
                  <span class="ml-2 text-sm font-medium text-gray-700">
                    <%= header.humanize %>
                  </span>
                </label>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <div class="mt-3 flex items-center space-x-4">
          <button type="button" data-action="click->export-form#selectAllFields" class="text-xs text-violet-600 hover:text-violet-800 underline">
            <%= t("exports.form.select_all") %>
          </button>
          <button type="button" data-action="click->export-form#deselectAllFields" class="text-xs text-violet-600 hover:text-violet-800 underline">
            <%= t("exports.form.deselect_all") %>
          </button>
        </div>
      <% else %>
        <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <p class="text-sm text-yellow-800">
            No fields available for selection. Complete an import first to see available fields.
          </p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Template Section (XML only) -->
  <div id="template-section" data-export-form-target="templateSection" style="display: none;">
    <details class="border-2 border-gray-200 rounded-xl overflow-hidden">
      <summary class="cursor-pointer px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 hover:from-violet-50 hover:to-violet-100 font-semibold text-gray-800 hover:text-violet-800 transition duration-200 ease-in-out select-none flex justify-between items-center">
        <span class="flex items-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
          </svg>
          <%= t("exports.form.summary_title") %>
        </span>
  <span class="text-sm font-normal text-gray-500"><%= t("exports.form.click_to_customize") %></span>
      </summary>
      
      <div class="p-6 bg-gray-50 border-t border-gray-200">
        <div class="mb-6 p-4 bg-blue-50 border-l-4 border-blue-400 rounded-r-lg">
          <p class="text-sm text-blue-800 mb-3">
            <span class="font-semibold">ðŸ’¡ <%= t("exports.form.xml_required") %>:</span> <%= t("exports.form.xml_hint") %>
          </p>
          
          <div class="bg-white p-3 rounded-lg border border-blue-200">
            <p class="text-xs font-semibold text-blue-700 mb-2"><%= t("exports.form.example_xml_template") %></p>
            <code class="block text-xs text-blue-900 font-mono leading-relaxed">
              &lt;items&gt;<br>
              {% for item in data %}<br>
              &nbsp;&nbsp;&lt;item&gt;<br>
              &nbsp;&nbsp;&nbsp;&nbsp;&lt;name&gt;{{ item.name }}&lt;/name&gt;<br>
              &nbsp;&nbsp;&nbsp;&nbsp;&lt;email&gt;{{ item.email }}&lt;/email&gt;<br>
              &nbsp;&nbsp;&lt;/item&gt;<br>
              {% endfor %}<br>
              &lt;/items&gt;
            </code>
          </div>
        </div>
        
  <%= form.label :template, t("exports.form.custom_xml_template"), class: "block text-sm font-semibold text-gray-800 mb-3" %>
        <%= form.text_area :template, 
            rows: 15,
            placeholder: t("exports.form.template_placeholder"),
        class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-lg shadow-sm focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition duration-200 ease-in-out text-gray-900 font-mono text-sm leading-relaxed",
        data: { controller: "codemirror", codemirror_mode_value: "html" }
          %>
        
        <div class="mt-4 p-4 bg-white rounded-lg border border-gray-200">
          <p class="text-sm font-semibold text-gray-700 mb-2">ðŸ”§ <%= t("exports.form.available_objects") %>:</p>
          <div class="grid grid-cols-2 gap-4 text-xs text-gray-600">
            <div>
              <p><code class="bg-gray-100 px-2 py-1 rounded">data</code> - <%= t("exports.form.obj_all_records") %></p>
              <p class="mt-1"><code class="bg-gray-100 px-2 py-1 rounded">item</code> - <%= t("exports.form.obj_item") %></p>
            </div>
            <div>
              <p><code class="bg-gray-100 px-2 py-1 rounded">export</code> - <%= t("exports.form.obj_export") %></p>
              <p class="mt-1"><code class="bg-gray-100 px-2 py-1 rounded">current_time</code> - <%= t("exports.form.obj_current_time") %></p>
            </div>
          </div>

          <%# List all fields available on `item` based on the last completed import %>
          <% item_fields = Import.completed.recent.first&.file_header || [] %>
          <div class="mt-4">
            <p class="text-sm font-semibold text-gray-700 mb-2">ðŸ“‹ <%= t("exports.form.item_fields") %> (<%= t("exports.form.use_as_html") %>):</p>
            <% if item_fields.any? %>
              <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2 text-xs text-gray-700 max-h-64 overflow-auto p-2 bg-gray-50 border border-gray-200 rounded">
                <% item_fields.each do |field| %>
                  <div class="flex items-center">
                    <code class="bg-white border border-gray-200 px-2 py-1 rounded w-full truncate">{{ item.<%= field %> }}</code>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="p-3 bg-yellow-50 border border-yellow-200 rounded text-xs text-yellow-800">
                <%= t("exports.form.no_item_fields") %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </details>
  </div>

  <!-- Action Buttons -->
  <div class="flex items-center justify-between pt-6 border-t border-gray-200">
    <div class="text-sm text-gray-500">
  <p><%= t("exports.form.footer_hint") %></p>
    </div>
    <div class="flex items-center space-x-4">
    <%= link_to t("actions.cancel"), exports_path, 
          class: "inline-flex items-center px-6 py-3 border-2 border-gray-300 text-sm font-semibold rounded-lg text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition duration-200 ease-in-out"
      %>
    <%= form.submit export.persisted? ? t("actions.update") : t("actions.save"), 
      data: { disable_with: export.persisted? ? t("actions.updating") : t("actions.saving") },
          class: "inline-flex items-center px-6 py-3 border border-transparent text-sm font-semibold rounded-lg bg-gradient-to-r from-violet-600 to-purple-600 hover:from-violet-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 shadow-lg hover:shadow-xl transform hover:scale-105 transition duration-200 ease-in-out"
      %>
    </div>
  </div>
<% end %>
