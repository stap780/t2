<div class="max-w-4xl mx-auto">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-semibold"><%= t('.heading') %></h1>
    <div class="flex space-x-2">
      <%= link_to_edit edit_company_path(@company), class: "inline-flex items-center px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
      <%= link_to t('actions.back'), companies_path, class: "px-3 py-1 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t('activerecord.attributes.company.short_title') %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @company.short_title %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500"><%= t('activerecord.attributes.company.tip') %></dt>
        <dd class="mt-1 text-sm text-gray-900">
          <% if @company.tip.present? %>
            <%= t(@company.tip, scope: %i[company tip], default: @company.tip.humanize) %>
          <% end %>
        </dd>
      </div>
      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500"><%= t('activerecord.attributes.company.title') %></dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @company.title %></dd>
      </div>
      <% if @company.inn.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500"><%= t('activerecord.attributes.company.inn') %></dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @company.inn %></dd>
        </div>
      <% end %>
      <% if @company.kpp.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500"><%= t('activerecord.attributes.company.kpp') %></dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @company.kpp %></dd>
        </div>
      <% end %>
      <% if @company.ur_address.present? %>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500"><%= t('activerecord.attributes.company.ur_address') %></dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @company.ur_address %></dd>
        </div>
      <% end %>
      <% if @company.fact_address.present? %>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500"><%= t('activerecord.attributes.company.fact_address') %></dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @company.fact_address %></dd>
        </div>
      <% end %>
    </dl>
  </div>
</div>

