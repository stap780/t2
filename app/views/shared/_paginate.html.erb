<div class="flex flex-col md:flex-row items-center justify-between p-4">
  <div class="w-full md:w-1/3 mb-2 md:mb-0">
    <div class="text-gray-600 text-sm" role="status" aria-live="polite">
      <%= page_entries_info f if f.size > 0 %>
    </div>
  </div>
  <div class="w-full md:w-2/3 flex justify-end items-center">
    <%= will_paginate f, 
        class: "flex space-x-1 pagination my-4", 
        inner_window: 2,
        outer_window: 1,
        previous_label: '← ',
        next_label: ' →',
        link_separator: ' <span class="text-gray-500 px-2"></span> ',
        container: false,
        page_links: true if f.size > 0 %>
  </div>
</div>