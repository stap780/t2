<%= turbo_frame_tag "bulk_dialog" do %>
  <div class="flex items-center">
    <% message = local_assigns[:message] || nil %>
    <% content = local_assigns[:content] || nil %>
    <% if message.present? %>
      <% if message == 'Success' %>
        <%= link_to 'Скачать', rails_blob_path(content, disposition: 'attachment'), class: 'btn btn-primary' %>
      <% else %>
        <%= tag.p content %>
      <% end %>
    <% else %>
      <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-violet-600 mr-3"></div>
        <div>
          <h3 class="text-lg font-semibold">Процесс запущен</h3>
          <p class="text-sm text-gray-600 mt-2">Дождитесь выполнения задачи</p>
        </div>
      </div>
    <% end %>
<% end %>