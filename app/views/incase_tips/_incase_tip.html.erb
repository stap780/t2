<%= turbo_frame_tag dom_id(incase_tip), class: "grid grid-cols-[50px_1fr_100px_200px] gap-4 p-4 border-t hover:bg-gray-50" do %>
  <div><%= incase_tip.id %></div>
  <div>
    <%= link_to incase_tip.title, incase_tip_path(incase_tip), class: "text-blue-600 hover:text-blue-800", data: { turbo: false } %>
  </div>
  <div>
    <% if incase_tip.color.present? %>
      <span class="inline-block w-6 h-6 rounded-full" style="background-color: <%= incase_tip.color %>"></span>
    <% end %>
  </div>
  <div class="flex justify-end space-x-2">
    <%= link_to_edit edit_incase_tip_path(incase_tip), data: { turbo_frame: 'offcanvas', turbo_prefetch: false } %>
    <%= link_to_delete incase_tip_path(incase_tip), data: { turbo_method: :delete, turbo_confirm: t('actions.delete') } %>
  </div>
<% end %>

