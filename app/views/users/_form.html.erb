<%= form_with model: user, class: "space-y-6" do |form| %>
  <%= render 'shared/errors', object: user %>

  <div class="grid grid-cols-1 gap-6">
    <!-- Email -->
    <div class="space-y-2">
      <%= form.label :email_address, class: "block text-sm font-semibold text-gray-800" %>
      <%= form.email_field :email_address, 
          class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-lg shadow-sm focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition duration-200 ease-in-out text-gray-900 placeholder-gray-400"
      %>
    </div>

    <!-- Password -->
    <div class="space-y-2">
      <%= form.label :password, class: "block text-sm font-semibold text-gray-800" %>
      <%= form.password_field :password, 
          class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-lg shadow-sm focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition duration-200 ease-in-out text-gray-900 placeholder-gray-400"
      %>
      <% if user.persisted? %>
        <p class="text-xs text-gray-500 mt-1"><%= t("users.form.password_hint", default: "Leave blank to keep current password") %></p>
      <% end %>
    </div>

    <!-- Password Confirmation -->
    <div class="space-y-2">
      <%= form.label :password_confirmation, class: "block text-sm font-semibold text-gray-800" %>
      <%= form.password_field :password_confirmation, 
          class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-lg shadow-sm focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition duration-200 ease-in-out text-gray-900 placeholder-gray-400"
      %>
    </div>

    <!-- Role -->
    <% if Current.user&.admin? %>
      <div class="space-y-2">
        <%= form.label :role, class: "block text-sm font-semibold text-gray-800" %>
        <%= form.select :role, 
            options_for_select(
              User.roles.keys.map { |k| [t("enums.user.role.#{k}"), k] },
              selected: user.role
            ),
            {},
            class: "block w-full px-4 py-3 border-2 border-gray-200 rounded-lg shadow-sm focus:ring-2 focus:ring-violet-500 focus:border-violet-500 transition duration-200 ease-in-out text-gray-900"
        %>
      </div>
    <% end %>
  </div>

  <!-- Action Buttons -->
  <div class="flex items-center gap-2 pt-6 border-t border-gray-200">
    <button type="button" 
            data-action="click->offcanvas#close"
            class="px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300">
      <%= t("actions.cancel") %>
    </button>
    <%= form.submit data: { disable_with: t("helpers.submit.saving") },
      class: "px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
  </div>
<% end %>

