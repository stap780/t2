<%= form_with model: item_status, local: true, class: "space-y-4" do |f| %>

  <%= render 'shared/errors', object: item_status %>

  <fieldset>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md" %>
  </fieldset>
  
  <fieldset>
    <%= f.label :color, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :color, type: "color", class: "w-full h-10 border border-gray-300 rounded-md" %>
  </fieldset>
  
  <div class="flex justify-end space-x-3">
    <%= f.submit t('actions.save'), class: "px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
  </div>

<% end %>

