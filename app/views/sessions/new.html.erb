<div class="signin-container min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="signin-form max-w-md w-full space-y-8">
    <%= render "shared/flash" %>
    <div>
      <div class="mx-auto h-12 w-12 flex items-center justify-center rounded-full bg-blue-100">
      <svg xmlns="http://www.w3.org/2000/svg" width="617" height="309" viewBox="0 0 617 309" fill="none">
      <path fill-rule="evenodd" clip-rule="evenodd" d="M0 7.60931V308.187H175.02L298.675 184.531V7.60931H0ZM77.9966 83.7056V228.287H148.385L222.578 154.094V83.7056H77.9966Z" fill="#FF481E"/>
      <path fill-rule="evenodd" clip-rule="evenodd" d="M194.046 308.187H306.287L475.855 137.228L475.599 136.972L538.334 74.237L538.378 74.1934L538.378 74.1929V308.187H616.376V7.60931H494.623L194.046 308.187Z" fill="#FF481E"/>
      <path d="M343.285 8.52831V5.47308H357.68V8.52831H352.314V23H348.651V8.52831H343.285ZM360.051 5.47308H364.621L369.448 17.249H369.653L374.48 5.47308H379.05V23H375.455V11.5921H375.31L370.774 22.9144H368.326L363.791 11.5493H363.645V23H360.051V5.47308Z" fill="#FF481E"/>
      </svg>
      </div>
      <h2 class="signin-title mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">
        Sign in to your account
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Welcome back! Please sign in to continue.
      </p>
    </div>

    <%= form_with url: session_path, method: :post, local: true, class: "mt-8 space-y-6" do |f| %>
      <div>
        <%= f.label :email_address, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email_address, required: true, autofocus: true,
              class: "signin-input appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:z-10 transition duration-150 ease-in-out sm:text-sm" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, required: true,
              class: "signin-input appearance-none relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 focus:z-10 transition duration-150 ease-in-out sm:text-sm" %>
      </div>

      <div>
        <%= f.submit "Sign in",
              class: "signin-button group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" %>
      </div>
    <% end %>
    <div class="mt-4 text-sm text-gray-500">
      <%= link_to "Forgot password?", new_password_path, class: "text-gray-700 underline hover:no-underline" %>
    </div>
  </div>
</div>
