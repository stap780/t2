<div class="p-4 flex items-center justify-between">
  <div>
    <div class="font-medium text-gray-900">
      <%= import_schedule.name.presence || "Scheduled Import" %>
      <span class="ml-2 text-xs px-2 py-1 rounded bg-gray-100 text-gray-800">Daily</span>
      <% if import_schedule.active %>
        <span class="ml-2 text-xs px-2 py-1 rounded bg-green-100 text-green-800">Active</span>
      <% else %>
        <span class="ml-2 text-xs px-2 py-1 rounded bg-gray-100 text-gray-500">Paused</span>
      <% end %>
    </div>
    <div class="text-sm text-gray-600 mt-1">
      Time: <span class="font-medium"><%= import_schedule.time %></span>
      <% if import_schedule.scheduled_for %>
        • Next at <%= import_schedule.scheduled_for.in_time_zone.strftime("%B %d, %Y at %H:%M") %>
      <% else %>
        • Not scheduled yet
      <% end %>
    </div>
  </div>
  <div class="flex items-center gap-2">
    <%= link_to edit_import_schedule_path(import_schedule), 
        class: "inline-flex items-center px-3 py-1 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-gray-50 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 transition duration-150 ease-in-out", data: { turbo: false } do %>
      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
      Edit
    <% end %>
    
    <%= button_to run_import_schedule_path(import_schedule), 
          method: :post,
          remote: true,
          class: "inline-flex items-center px-3 py-1 border border-blue-300 shadow-sm text-xs font-medium rounded text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out" do %>
        <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-7 4h12l-2 5H8l-2-5z" />
        </svg>
        Run
    <% end %>

    <%= button_to import_schedule_path(import_schedule), method: :delete, data: { confirm: "Delete schedule?" }, class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out" do %>
      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
</div>
