<%= form_with model: import_schedule, local: true, class: "space-y-4" do |f| %>
  <%= render 'shared/errors', object: import_schedule %>
  <div>
    <%= f.label :name, t("activerecord.attributes.import_schedule.name"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :time, t("import_schedules.form.time_label"), class: "block text-sm font-medium text-gray-700" %>
    <% time_options = (0..23).flat_map { |h| [0,15,30,45].map { |m| format("%02d:%02d", h, m) } } %>
    <%= f.select :time, options_for_select(time_options, import_schedule.time), {}, class: "mt-1 block w-full border rounded px-3 py-2" %>
  </div>

  <div>
    <%= f.label :recurrence, t("activerecord.attributes.import_schedule.recurrence"), class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :recurrence, options_for_select([[t("import_schedules.form.daily"), "daily"]], import_schedule.recurrence), {}, class: "mt-1 block w-full border rounded px-3 py-2" %>
  </div>

  <div class="flex items-center">
    <%= f.check_box :active, class: "h-4 w-4" %>
    <%= f.label :active, t("activerecord.attributes.import_schedule.active"), class: "ml-2 text-sm text-gray-700" %>
  </div>

  <div class="flex items-center space-x-4">
      <%= link_to t("actions.cancel"), import_schedules_path, 
          class: "inline-flex items-center px-6 py-3 border-2 border-gray-300 text-sm font-semibold rounded-lg text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition duration-200 ease-in-out"
      %>
    <%= f.submit t("actions.save"), class: "px-4 py-2 bg-violet-600 text-white rounded-md" %>
  </div>
<% end %>
