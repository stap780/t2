<%= turbo_frame_tag moysklad, class: "flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg hover:bg-gray-50 transition duration-150 ease-in-out" do %>
  <div class="flex-1">
    <div class="flex items-center space-x-4">
      <div class="flex-1 min-w-0">
        <div class="text-sm font-medium text-gray-900 truncate">
          <%= moysklad.api_key %>
        </div>
        <div class="mt-1">
          <span class="text-xs text-gray-400">••••••••</span>
        </div>
      </div>
    </div>
  </div>
  
  <div class="flex items-center space-x-2">
    <%= link_to check_moysklad_path(moysklad), 
          method: :get,
          class: "inline-flex items-center px-3 py-1 border border-blue-300 shadow-sm text-xs font-medium rounded text-blue-700 bg-blue-50 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-150 ease-in-out",
          data: { turbo: false } do %>
      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <%= t("moysklads.moysklad.check", default: "Check") %>
    <% end %>

    <%= link_to edit_moysklad_path(moysklad), 
          class: "inline-flex items-center px-3 py-1 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-gray-50 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 transition duration-150 ease-in-out",
          data: { turbo_frame: :offcanvas } do %>
      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
      <%= t("actions.edit", default: "Edit") %>
    <% end %>

    <%= button_to moysklad_path(moysklad), 
          method: :delete,
          confirm: t("moysklads.moysklad.delete_confirm", default: "Are you sure?"),
          class: "inline-flex items-center px-3 py-1 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition duration-150 ease-in-out" do %>
      <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
      </svg>
    <% end %>
  </div>
<% end %>

